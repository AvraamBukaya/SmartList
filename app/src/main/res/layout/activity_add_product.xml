<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".viewModels.AddProduct">


    <LinearLayout
        android:id="@+id/section"
        android:layout_width="394dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:text="@string/add_product_title_page"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>


    <FrameLayout
        android:id="@+id/fragments_div"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/nav_bottom"
        android:layout_below="@+id/section"
        android:layout_marginBottom="2dp"></FrameLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-1dp"
        app:menu="@menu/nav_items"></com.google.android.material.bottomnavigation.BottomNavigationView>



</RelativeLayout>