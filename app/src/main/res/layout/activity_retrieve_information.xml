<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewModels.RetrieveInformation">

    <LinearLayout
        android:id="@+id/section_retrieve_information"
        android:layout_width="396dp"
        android:layout_height="194dp">

        <ImageButton
            android:id="@+id/board_background"
            android:layout_width="match_parent"
            android:layout_height="188dp"
            android:src="@drawable/board_background" />

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_productAdding"
        android:layout_width="400dp"
        android:layout_height="314dp"
        android:layout_below="@+id/section_retrieve_information"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="402dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="165dp"
                android:layout_height="64dp"
                android:padding="10dp" />

            <TextView
                android:layout_width="112dp"
                android:layout_height="29dp"
                android:layout_marginTop="10dp"
                android:text="Product Details"
                android:textColor="@color/Black"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/title"
                android:layout_width="344dp"
                android:layout_height="234dp"
                android:text="Product Details"
                android:textColor="@color/color_primary_dark"
                android:textStyle="bold" />


        </LinearLayout>




    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/add_product_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Product"
        android:background="@color/color_primary_dark"
        android:layout_alignParentBottom="true"/>




</RelativeLayout>